{
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "search.exclude": {
        "**/node_modules": true,
        "**/build": true,
        "**/dist": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "cSpell.language": "en-GB",
    "cSpell.words": [
        "autowire",
        "autowired",
        "csrm",
        "tran",
        "trans"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "packages": true
    },
    "[scss]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    }
}